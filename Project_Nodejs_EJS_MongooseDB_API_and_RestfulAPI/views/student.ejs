  <body>
    <table>
      <tr>
        <th>ID</th>
        <th>name</th>
        <th>age</th>
        <th>merit</th>
        <th>other</th>
        <th>Delete</th>
      </tr>
      <% data.forEach(student =>{%>
      <tr>
        <td><%= student.id%></td>
        <td><%= student.name%></td>
        <td><%= student.age%></td>
        <td><%= student.scholarship.merit%></td>
        <td><%= student.scholarship.other%></td>
        <td><a href="/student/<%= student.id%>">indiviual info</a></td>
        <td><a href="/student/edit/<%= student.id%>">Edit</td>
        <td><a href="/student/delete/<%= student.id%>">Delete</a></td>
        <td><form action="/student/delete/<%= student.id%>?_method=Delete" method="POST"><button>Delete by button</button></form></td>

      </tr>

      <% })%>
    </table>

    <a href="/student/insert">insert new data</a>
  </body>
  <script src="./app.js"></script>
